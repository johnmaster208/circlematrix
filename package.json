{
    "name": "circlematrix",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "bootstrap": "3",
        "concurrently": "^3.5.0",
        "express": "^4.16.2",
        "keymirror": "^0.1.1",
        "react": "^16.0.0",
        "react-bootstrap": "^0.32.1",
        "react-bootstrap-modal": "^4.0.0",
        "react-dom": "^16.0.0",
        "react-fontawesome": "^1.6.1",
        "react-redux": "^5.0.6",
        "react-scripts": "1.0.14",
        "react-shapes": "^0.1.0",
        "redux": "^3.7.2",
        "redux-immutable-state-invariant": "^2.1.0",
        "redux-thunk": "^2.2.0",
        "socket.io": "^2.0.3"
    },
    "scripts": {
        "start": "concurrently \"npm run server\" \"react-scripts start\"",
        "debug": "concurrently \"npm run server-debug\" \"react-scripts start\"",
        "build": "react-scripts build",
        "test": "react-scripts test --env=jsdom",
        "eject": "react-scripts eject",
        "server": "node ./src/SocketServer.js",
        "server-debug": "node --inspect ./src/SocketServer.js"
    },
    "devDependencies": {
        "enzyme": "^3.3.0",
        "enzyme-adapter-react-16": "^1.1.1",
        "redux-mock-store": "^1.5.1",
        "sinon": "^5.0.10"
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{js,jsx}",
            "!src/**/index.{js,jsx}",
            "!src/**/configureStore.js",
            "!src/**/circleData.js",
            "!src/{registerServiceWorker,SocketServer,setupTests,tempPolyfills}.js",
            "!<rootDir>/node_modules/"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 80,
                "functions": 80,
                "lines": 80,
                "statements": 80
            }
        },
        "coverageReporters": [
            "text"
        ]
    }
}